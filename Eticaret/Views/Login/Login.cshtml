
@{
    ViewBag.Title = "Login";
}

    <div class="row">
        <div class="col-md-4 offset-md-4 my-4">
            <form>
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-3">
                                <h3>
                                    <span class="fas fa-sign-in-alt fa-2x"></span>
                                </h3>
                            </div>
                            <div class="col-md-9 text-right">
                                <h2>Giriş</h2>
                                <small>Lütfen email ve şiftrenizi girin.</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <input type="email"
                                   name="email"
                                   id="email"
                                   placeholder="abc@gmail.com"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <input type="password"
                                   name="password"
                                   id="password"
                                   placeholder="password"
                                   class="form-control" />
                        </div>
                    </div>
                    <div class="card-footer text-muted text-right">
                        <a href="" class="btn btn-warning"><span class="fas fa-asterisk"></span> Şifremi Unuttum </a>
                        <button class="btn btn-success">
                            <span class="fas fa-sign-in-alt"></span> Giriş
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>


